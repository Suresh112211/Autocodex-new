const bundles = [
  "1. HTML",
  "2. CSS / SCSS",
  "3. XML",
  "4. JSON",
  "5. Markdown",
  "6. Text",
  "7. UI Components",
  "8. Navigation",
  "9. Forms",
  "10. Buttons",
  "11. Cards",
  "12. Animations",
  "13. APIs",
  "14. Database",
  "15. Auth / JWT",
  "16. Regex Validator",
  "17. Notification",
  "18. Export Options"
];

window.onload = () => {
  const container = document.getElementById("bundleContainer");
  bundles.forEach(bundle => {
    const li = document.createElement("li");
    li.innerText = bundle;
    container.appendChild(li);
  });
};

